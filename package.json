{
  "name": "itwinui-monorepo",
  "version": "0.0.0",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*",
      "playgrounds/*",
      "internal/*",
      "examples",
      "testing/*"
    ]
  },
  "lint-staged": {
    "*.{scss}": [
      "prettier --write"
    ],
    "*.{scss,html}": [
      "stylelint --fix"
    ],
    "*.{scss,html,js}": [
      "pnpm lint:copyright --fix"
    ],
    "*.{tsx,ts,jsx,js}": [
      "prettier --write",
      "node scripts/copyrightLinter.js --fix"
    ]
  },
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "format": "turbo run format",
    "prepare": "husky install",
    "postinstall": "patch-package",
    "lint:copyright": "node scripts/copyrightLinter.js",
    "createComponent": "node scripts/createComponent.js",
    "approve:css": "pnpm workspace @itwin/itwinui-css approve",
    "approve:react": "pnpm workspace storybook approve",
    "clean:images": "pnpm workspace @itwin/itwinui-css clean:images",
    "clean": "turbo run clean && rimraf node_modules",
    "release": "pnpm build --filter={./packages/*}... && changeset publish"
  },
  "dependencies": {},
  "devDependencies": {
    "@changesets/cli": "^2.26.2",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^7.6.0",
    "cross-env": "^7.0.3",
    "husky": "^8.0.2",
    "lint-staged": "^13.2.1",
    "patch-package": "~6.5.1",
    "prettier": "2.8.0",
    "rimraf": "^3.0.2",
    "turbo": "~1.6.3"
  },
  "resolutions": {
    "postcss": "8.4.26",
    "prettier": "2.8.8",
    "autoprefixer": "10.4.14",
    "semver": "^7.5.2",
    "optionator": "~0.9.3",
    "typescript": "~5.1.6",
    "@cypress/request": "^3.0.0"
  },
  "engines": {
    "npm": ">=9.0.0",
    "node": ">=18.0.0"
  },
  "packageManager": "pnpm@8.6.12",
  "prettier": "configs/prettier-config"
}
